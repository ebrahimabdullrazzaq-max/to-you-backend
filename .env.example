APP_NAME=VegetableDeliveryApp
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database - Railway will provide these automatically in production
DB_CONNECTION=pgsql
# Remove other DB_* lines - Railway provides them automatically

# Session & Sanctum (add production examples)
SESSION_DRIVER=database
SESSION_DOMAIN=localhost
SANCTUM_STATEFUL_DOMAINS=localhost:3000,localhost:8000

# Cache & Queue
CACHE_DRIVER=file
QUEUE_CONNECTION=database
FILESYSTEM_DISK=local

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

